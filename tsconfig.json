{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/", "src/pseudocode-interpreter/"]
}
